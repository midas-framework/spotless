# Erlang version
erlang_version=24.0

# Elixir version
elixir_version=1.12.1

# A command to run right before compiling the app (after elixir, .etc)
hook_pre_compile="wget -c https://github.com/gleam-lang/gleam/releases/download/v0.16.0/gleam-v0.16.0-linux-amd64.tar.gz -O - | tar -xz -C . &&
  export PATH=$PATH:$PWD/gleam"